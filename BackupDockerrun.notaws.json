{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name": "client",
            "image": "rafal712/multi-client",
            "hostname": "client",
            "essential": false
        }, 
        {
            "name": "nginx",
            "image": "rafal712/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links": ["client", "server"]
        }, 
        {
            "name": "server",
            "image": "rafal712/multi-api",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "rafal712/multi-worker",
            "hostname": "worker",
            "essential": false
        }
    ]
}